<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BillMapper">

    <select id="getBills" resultType="com.xhc.springboot.entities.BillProvider">
      select b.*, p.providerName
      from bill b left join provider p on b.pid=p.pid
      where 1=1
      <if test="billName != null and billName != ''">
          <!--${}用于字符串拼接使用-->
          and bill_name like '%${billName}%'
      </if>
      <if test="pid != null">
            and b.pid = #{pid}
      </if>
      <if test="pay != null">
        and pay = #{pay}
      </if>
    </select>

    <select id="getBillByBid" resultType="com.xhc.springboot.entities.BillProvider">
      select b.*, p.providerName
      from bill b left join provider p on b.pid=p.pid
      where bid = #{bid}
    </select>

    <insert id="addBill" >
        INSERT INTO `bill` ( `bill_code`, `bill_name`, `bill_com`, `bill_num`, `money`, `pay`, `pid`)
        VALUES (#{billCode}, #{billName}, #{billCom}, #{billNum}, #{money}, #{pay}, #{pid})
    </insert>

    <update id="updateBill">
        UPDATE `bill`
        SET `bill_code`=#{billCode}, `bill_name`=#{billName}, `bill_com`=#{billCom}, `bill_num`=#{billNum},
          `money`=#{money}, `pay`=#{pay}, `pid`=#{pid}, `create_date`=now()
        WHERE `bid` = #{bid}
    </update>
    
    <delete id="deleteBillByBid">
        delete from bill
        where bid = #{bid}
    </delete>

</mapper>